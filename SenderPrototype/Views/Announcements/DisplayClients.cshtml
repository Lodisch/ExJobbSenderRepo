@model List<SenderPrototype.Models.DataTransferObjects.DtoRecievers>

<h2>Clients</h2>

<table class="table table-bordered">
    <tr>
        <th>Select</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Groupname</th>
        <th>User Id</th>
    </tr>

    @foreach (var reciever in Model)
    {
        <tr>
            @Html.HiddenFor(m => reciever.Id)
            <td>@Html.CheckBoxFor(m => reciever.IsSelected, new { id = "selectCb", value = reciever.Id })</td>
            <td>@Html.DisplayFor(m => reciever.Firstname)</td>
            <td>@Html.DisplayFor(m => reciever.Lastname)</td>
            <td>@Html.DisplayFor(m => reciever.GroupId)</td>
            <td>@Html.DisplayFor(m => reciever.UserId)</td>
        </tr>
    }

</table>
<button id="getChecked" class="btn btn-primary btn-lg btn-block">Send to selected</button>
